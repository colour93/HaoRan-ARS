//- layout.pug
//- 布局模板

html(lang="zh-cn")
    head 
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="css/main.css")
        script(src="https://cdn.bootcdn.net/ajax/libs/jquery/3.6.0/jquery.min.js") 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js") 
        script(src="https://cdn.jsdelivr.net/npm/axios@0.26.0/dist/axios.min.js") 
        block script
        title #{title} - 浩然 ARS - 管理面板

    body.container
        //- 导航栏
        nav.navbar.navbar-expand.navbar-light.bg-light
            .container-fluid 
                a.navbar-brand(href="#") 浩然 ARS - 管理面板

                .collapse.navbar-collapse
                    ul.navbar-nav

                        //- 用户信息
                        if data.data
                            li.nav-item
                                a.nav-link 欢迎您 #{data.data.user.displayName} !
                            li.nav-item
                                a.btn.btn-outline-danger(href=root+"/signout") 登出
                        else
                            li.nav-item
                                a.btn.btn-primary(href=root+"/auth") 登录 Microsoft 账户
                
        .container
            block content

        footer
            .container
                p
                | &copy; 玖叁 2022 |
                i.fa.fa-value(aria-hidden='true') &nbsp;
                a(href='https://github.com/colour93/HaoRan-ARS') GitHub